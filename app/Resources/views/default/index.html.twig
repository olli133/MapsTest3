{% block body %}
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">

    </div>
    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-md-12">
                        <div id="map" class="img-responsive"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <p>
                                    <form action="/src/AppBundle/PictureUploader.php" method="post" enctype="multipart/form-data">
                                        <input type="file" multiple name="file[]" class="btn btn-primary btn-lg" id="pictureUpload">
                                        <input type="submit" value="Upload Image" name="submit" id="upload" class="upload">
                                    </form>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-center">
                                    <div class="input-group div-download">
                                        <p><button type="button" class="btn btn-primary" id="btn-save">Save Map</button></p>
                                    </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="input-group div-download">
                                    <p><button type="button" class="btn btn-default" id="btn-download">Download PNG</button></p>
                                </div>
                            </div>
                            <div class="col-md-7 text-center">
                                <div class="input-group div-download">
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default">Copy Link</button>
                                    </span>
                                    <input type="text" placeholder="Link" class="form-control" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5" id="picture-info-div">
                <div class="panel panel-primary" id="picture-info-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Pictures</h3>
                    </div>
                    <div class="panel-body">
                        <div class="picture-info-box">
                            <div class="col-sm-4 hidden-xs picture-info">
                                <img class="img-responsive" src="{{ asset('test_picture.jpg') }}">
                            </div>
                            <div class="col-sm-8">
                                <div class="row">
                                    <div class="col-md-12 picture-name-div">
                                        <div class="form-inline">
                                            <input type="text" placeholder="Name" class="form-control" id="picture-name">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-7 picture-name-div">
                                        <input type="text" placeholder="dd.mm.yyyy" class="form-control" id="picture-date">
                                    </div>
                                    <div class="col-xs-5">

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-8 nopadding">
                                <div class="col-sm-6 nopadding">
                                    <div class="form-group">
                                        <label class="col-md-3 nopadding control-label" for="latitude">Lat.:</label>

                                        <div class="col-md-9">
                                            <div class="row">
                                                <label class="radio-inline">
                                                    <input name="latnordsud" value="nord" id="nord" checked="" type="radio">
                                                    N
                                                </label>
                                                <label class="radio-inline">
                                                    <input name="latnordsud" value="sud" id="sud" type="radio">
                                                    S
                                                </label>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-3 nopadding">
                                                        <div class="col-xs-10 nopadding">
                                                            <input class="form-control nopadding sexagesimal" id="latitude_degres" type="textbox">
                                                        </div>
                                                        <div class="col-xs-2 nopadding">
                                                            <label for="latitude_degres">°</label>
                                                        </div>
                                                </div>
                                                <div class="col-xs-3 nopadding">
                                                    <div class="col-xs-10 nopadding">
                                                        <input class="form-control nopadding sexagesimal" id="latitude_minutes" type="textbox">
                                                    </div>
                                                    <div class="col-xs-2 nopadding">
                                                        <label for="latitude_minutes">'</label>
                                                    </div>
                                                </div>
                                                <div class="col-xs-3 nopadding">
                                                    <div class="col-xs-10 nopadding">
                                                        <input class="form-control nopadding sexagesimalsec" id="latitude_secondes" type="textbox">
                                                    </div>
                                                    <div class="col-xs-2 nopadding">
                                                        <label for="latitude_secondes">''</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 nopadding">
                                    <div class="form-group">
                                        <label class="col-md-3 nopadding control-label" for="longtitude">Long.:</label>

                                        <div class="col-md-9">
                                            <div class="row">
                                                <label class="radio-inline">
                                                    <input name="longeastwest" value="west" id="west" checked="" type="radio">
                                                    W
                                                </label>
                                                <label class="radio-inline">
                                                    <input name="longeastwest" value="east" id="east" type="radio">
                                                    E
                                                </label>
                                            </div>
                                            <div class="row">
                                                <div class="col-xs-3 nopadding">
                                                    <div class="col-xs-10 nopadding">
                                                        <input class="form-control nopadding sexagesimal" id="longtitude_degres" type="textbox">
                                                    </div>
                                                    <div class="col-xs-2 nopadding">
                                                        <label for="longtitude_degres">°</label>
                                                    </div>
                                                </div>
                                                <div class="col-xs-3 nopadding">
                                                    <div class="col-xs-10 nopadding">
                                                        <input class="form-control nopadding sexagesimal" id="longtitude_minutes" type="textbox">
                                                    </div>
                                                    <div class="col-xs-2 nopadding">
                                                        <label for="longtitude_minutes_minutes">'</label>
                                                    </div>
                                                </div>
                                                <div class="col-xs-3 nopadding">
                                                    <div class="col-xs-10 nopadding">
                                                        <input class="form-control nopadding sexagesimalsec" id="longtitude-seconds" type="textbox">
                                                    </div>
                                                    <div class="col-xs-2 nopadding">
                                                        <label for="longtitude-seconds">''</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <hr>
            &copy; 2016 myPictureRoute.de |
            <a href="/Impressum">Impressum</a> |
            <a href="/Kontakt">Kontakt</a>
        </footer>
    </div> <!-- /container -->
{% endblock %}

